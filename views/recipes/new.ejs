<script src="https://code.jquery.com/jquery-3.2.1.min.js"
    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
<script defer src="../javascripts/formHandler.js"></script>

<%- include ../partials/header.ejs %>
<h1>Add a Recipe</h1>

<form id="newRecipeForm" action="/recipes" method="POST">

    <fieldset>

        <legend>Recipe Name</legend>

        <input required name="name" type="text">

    </fieldset>

    <fieldset>

        <legend>Recipe Description</legend>

        <textarea rows="5" cols="33" name="description" type="text"></textarea>

    </fieldset>

    <fieldset id="recipeInstructions">

        <legend>Ingredients</legend>

        <div>
            <span>Qty</span>
            <span>Ingredient</span>
            <span>Preparation</span>
        </div>

        <div class="ingredientsSection">
            <div class="ingredientRow">
                <p>
                    <input required name="qty" type="text">
                    <input required name="ingredient" type="text">
                    <input name="preparation" type="text">
                    <button type="button" class="removeIngredient"> - </button>
                </p>
                <p>
                    <button type="button" class="addIngredient"> + </button>
                </p>
            </div>
        </div>

    </fieldset>

    <fieldset id="recipeInstructions">

        <legend>Instructions</legend>

        <div class="instructionsSection">
            <div class="instructionRow">
                <p>
                    <input required name="instructions" type="text">
                    <button type="button" class="removeInstruction"> - </button>
                </p>
                <p>
                    <button type="button" class="addInstruction"> + </button>
                </p>
            </div>
        </div>

    </fieldset>

    <fieldset id="recipeAdditionalInfo">

        <legend>Additional Info</legend>

        <p>Skill Level: </p>
        <select name="skillLevel" type="text">
            <option value="Easy">Easy</option>
            <option value="Medium">Medium</option>
            <option value="Difficult">Difficult</option>
        </select>

        <p>Sevings: </p><input required class="numberOnlyInput" name="servings" type="text" pattern="[0-9]">
        <p>Prep Time (minutes): </p><input required class="numberOnlyInput" name="timePrep" type="text" pattern="[0-9]">
        <p>Cook Time (minutes):</p><input required class="numberOnlyInput" name="timeCook" type="text" pattern="[0-9]">
        <p>Wait Time (minutes):</p><input required class="numberOnlyInput" name="timeWait" type="text" pattern="[0-9]">
        <p>Upload an image</p><input name="imageUrl" type="text">

    </fieldset>

    <div class="buttonContainer">
        <input type="submit" value="Submit">
        <input class="" type="submit" value="Cancel">
    </div>

</form>